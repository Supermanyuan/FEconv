<?xml version="1.0" encoding="UTF-8" ?>
<!-- Configuration data file for creamake with gfortran in Linux -->
<!-- See https://www.codeproject.com/articles/84461/mingw-static-and-dynamic-libraries -->
<!-- Suggested fflags: -std=f2008 -fall-intrinsics -Wall -fcheck=all -fbacktrace -ggdb -->
<content>

<sources>
source
source/cuthill_mckee
source/ansys
source/patran
source/unv
source/mfm
source/mum
source/vtu
source/mphtxt
source/pmh
source/flux
source/freefem
source/fem_extract
source/gmsh
</sources>

<exec>
libfeconv-18.01-gfortran-linux.so
</exec>

<compiler>
gfortran
</compiler>

<fflags>
-fPIC -Ibasicmod/include/gfortran.linux
</fflags>

<ldflags>
-Lbasicmod/lib -lbasicmod-18.01-gfortran-linux
</ldflags>

<rules>
$(ejecutable): $(modulos_obj)
	$(FC) -shared -Wl,-soname,$(ejecutable) -o $(ejecutable) $(condir_modulos_obj) $(LDFLAGS)
	-mv $(ejecutable) lib/
	-mv object/*.mod include/gfortran.linux/
</rules>

</content>
